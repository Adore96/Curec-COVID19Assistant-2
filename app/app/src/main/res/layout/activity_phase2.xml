<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_Phase2">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="@drawable/virusplash"/>

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:elevation="20dp"
                    app:cardCornerRadius="10dp"
                    android:layout_marginTop="15dp"
                    app:cardUseCompatPadding="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="20dp"
                    android:clickable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="0dp"
                        android:paddingRight="0dp"
                        android:weightSum="5">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="We're almost done ..."
                            android:layout_gravity="start"
                            android:textColor="@color/black"
                            android:textSize="20dp"
                            android:fontFamily="@font/bold"
                            android:layout_marginBottom="20dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginLeft="15dp"
                            android:layout_weight="4"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Heart Diseases"
                                android:layout_gravity="center"
                                android:textColor="@color/black"
                                android:textSize="15dp"
                                android:fontFamily="@font/medium"
                                android:layout_marginBottom="15dp"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="15dp"
                                android:layout_weight="4"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <RadioGroup
                                    android:gravity="center"
                                    android:id="@+id/radioGroup1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="50dp"
                                    android:fontFamily="@font/regular"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="10dp"
                                    android:textColor="@color/white"
                                    android:textSize="15sp"
                                    android:padding="10dp"
                                    android:orientation="horizontal"
                                    android:weightSum="2">

                                    <RadioButton
                                        android:id="@+id/no1"
                                        android:layout_gravity="center"
                                        android:layout_width="wrap_content"
                                        android:layout_height="50dp"
                                        android:fontFamily="@font/regular"
                                        android:text="No"
                                        android:padding="15dp"
                                        android:checked="true"
                                        android:textColor="@color/white"
                                        android:textSize="15sp"
                                        android:button="@android:color/transparent"
                                        android:layout_weight="1"
                                        android:onClick="onRadioclicked1"
                                        android:background="@drawable/radio_button_left_selector" />
                                    <RadioButton
                                        android:id="@+id/yes1"
                                        android:layout_gravity="center"
                                        android:layout_width="wrap_content"
                                        android:layout_height="50dp"
                                        android:fontFamily="@font/regular"
                                        android:text="Yes"
                                        android:padding="15dp"
                                        android:checked="false"
                                        android:textColor="@color/black"
                                        android:textSize="15sp"
                                        android:button="@android:color/transparent"
                                        android:layout_weight="1"
                                        android:onClick="onRadioclicked1"
                                        android:background="@drawable/radio_button_right_selector"/>
                                </RadioGroup>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="High Blood Pressure"
                                android:layout_gravity="center"
                                android:textColor="@color/black"
                                android:textSize="15dp"
                                android:fontFamily="@font/medium"
                                android:layout_marginBottom="15dp"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="15dp"
                                android:layout_weight="4"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:orientation="horizontal">

                                <RadioGroup
                                    android:gravity="center"
                                    android:id="@+id/radioGroup2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="50dp"
                                    android:fontFamily="@font/regular"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="10dp"
                                    android:textColor="@color/white"
                                    android:textSize="15sp"
                                    android:padding="10dp"
                                    android:orientation="horizontal"
                                    android:weightSum="2">

                                    <RadioButton
                                        android:id="@+id/no2"
                                        android:layout_gravity="center"
                                        android:layout_width="wrap_content"
                                        android:layout_height="50dp"
                                        android:fontFamily="@font/regular"
                                        android:text="No"
                                        android:padding="15dp"
                                        android:checked="true"
                                        android:textColor="@color/white"
                                        android:textSize="15sp"
                                        android:button="@android:color/transparent"
                                        android:layout_weight="1"
                                        android:onClick="onRadioclicked2"
                                        android:background="@drawable/radio_button_left_selector" />
                                    <RadioButton
                                        android:id="@+id/yes2"
                                        android:layout_gravity="center"
                                        android:layout_width="wrap_content"
                                        android:layout_height="50dp"
                                        android:fontFamily="@font/regular"
                                        android:text="Yes"
                                        android:padding="15dp"
                                        android:checked="false"
                                        android:textColor="@color/black"
                                        android:textSize="15sp"
                                        android:button="@android:color/transparent"
                                        android:layout_weight="1"
                                        android:onClick="onRadioclicked2"
                                        android:background="@drawable/radio_button_right_selector" />
                                </RadioGroup>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Diabetes"
                                android:layout_gravity="center"
                                android:textColor="@color/black"
                                android:textSize="15dp"
                                android:fontFamily="@font/medium"
                                android:layout_marginBottom="15dp"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="15dp"
                                android:layout_weight="4"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:orientation="horizontal">

                                <RadioGroup
                                    android:gravity="center"
                                    android:id="@+id/radioGroup3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="50dp"
                                    android:fontFamily="@font/regular"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="10dp"
                                    android:textColor="@color/white"
                                    android:textSize="15sp"
                                    android:padding="10dp"
                                    android:orientation="horizontal"
                                    android:weightSum="2">

                                    <RadioButton
                                        android:id="@+id/no3"
                                        android:layout_gravity="center"
                                        android:layout_width="wrap_content"
                                        android:layout_height="50dp"
                                        android:fontFamily="@font/regular"
                                        android:text="No"
                                        android:padding="15dp"
                                        android:checked="true"
                                        android:textColor="@color/white"
                                        android:textSize="15sp"
                                        android:button="@android:color/transparent"
                                        android:layout_weight="1"
                                        android:onClick="onRadioclicked3"
                                        android:background="@drawable/radio_button_left_selector" />
                                    <RadioButton
                                        android:id="@+id/yes3"
                                        android:layout_gravity="center"
                                        android:layout_width="wrap_content"
                                        android:layout_height="50dp"
                                        android:fontFamily="@font/regular"
                                        android:text="Yes"
                                        android:padding="15dp"
                                        android:checked="false"
                                        android:textColor="@color/black"
                                        android:textSize="15sp"
                                        android:button="@android:color/transparent"
                                        android:layout_weight="1"
                                        android:onClick="onRadioclicked3"
                                        android:background="@drawable/radio_button_right_selector" />
                                </RadioGroup>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Lung Diseases"
                                android:layout_gravity="center"
                                android:textColor="@color/black"
                                android:textSize="15dp"
                                android:fontFamily="@font/medium"
                                android:layout_marginBottom="15dp"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="15dp"
                                android:layout_weight="4"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:orientation="horizontal">

                                <RadioGroup
                                    android:gravity="center"
                                    android:id="@+id/radioGroup4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="50dp"
                                    android:fontFamily="@font/regular"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="10dp"
                                    android:textColor="@color/white"
                                    android:textSize="15sp"
                                    android:padding="10dp"
                                    android:orientation="horizontal"
                                    android:weightSum="2">

                                    <RadioButton
                                        android:id="@+id/no4"
                                        android:layout_gravity="center"
                                        android:layout_width="wrap_content"
                                        android:layout_height="50dp"
                                        android:fontFamily="@font/regular"
                                        android:text="No"
                                        android:padding="15dp"
                                        android:checked="true"
                                        android:textColor="@color/white"
                                        android:textSize="15sp"
                                        android:button="@android:color/transparent"
                                        android:layout_weight="1"
                                        android:onClick="onRadioclicked4"
                                        android:background="@drawable/radio_button_left_selector" />
                                    <RadioButton
                                        android:id="@+id/yes4"
                                        android:layout_gravity="center"
                                        android:layout_width="wrap_content"
                                        android:layout_height="50dp"
                                        android:fontFamily="@font/regular"
                                        android:text="Yes"
                                        android:padding="15dp"
                                        android:checked="false"
                                        android:textColor="@color/black"
                                        android:textSize="15sp"
                                        android:button="@android:color/transparent"
                                        android:layout_weight="1"
                                        android:onClick="onRadioclicked4"
                                        android:background="@drawable/radio_button_right_selector" />
                                </RadioGroup>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Other Diseases"
                                android:layout_gravity="center"
                                android:textColor="@color/black"
                                android:textSize="15dp"
                                android:fontFamily="@font/medium"
                                android:layout_marginBottom="15dp"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="15dp"
                                android:layout_weight="4"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:orientation="horizontal">

                                <RadioGroup
                                    android:gravity="center"
                                    android:id="@+id/radioGroup5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="50dp"
                                    android:fontFamily="@font/regular"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="10dp"
                                    android:textColor="@color/white"
                                    android:textSize="15sp"
                                    android:padding="10dp"
                                    android:orientation="horizontal"
                                    android:weightSum="2">

                                    <RadioButton
                                        android:id="@+id/no5"
                                        android:layout_gravity="center"
                                        android:layout_width="wrap_content"
                                        android:layout_height="50dp"
                                        android:fontFamily="@font/regular"
                                        android:text="No"
                                        android:padding="15dp"
                                        android:checked="true"
                                        android:textColor="@color/white"
                                        android:textSize="15sp"
                                        android:button="@android:color/transparent"
                                        android:layout_weight="1"
                                        android:onClick="onRadioclicked5"
                                        android:background="@drawable/radio_button_left_selector" />
                                    <RadioButton
                                        android:id="@+id/yes5"
                                        android:layout_gravity="center"
                                        android:layout_width="wrap_content"
                                        android:layout_height="50dp"
                                        android:fontFamily="@font/regular"
                                        android:text="Yes"
                                        android:padding="15dp"
                                        android:checked="false"
                                        android:textColor="@color/black"
                                        android:textSize="15sp"
                                        android:button="@android:color/transparent"
                                        android:layout_weight="1"
                                        android:onClick="onRadioclicked5"
                                        android:background="@drawable/radio_button_right_selector" />
                                </RadioGroup>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/explain"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="25dp"
                            android:weightSum="10"
                            android:visibility="gone">

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_marginRight="20dp"
                                android:hint="Explain Here">
                                <androidx.appcompat.widget.AppCompatEditText
                                    android:id="@+id/accountname"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/regular"
                                    android:inputType="text|textMultiLine"
                                    android:maxLines="5"
                                    android:minHeight="50dp" />
                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>

                        <Button
                            android:id="@+id/submit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_marginLeft="35dp"
                            android:layout_marginRight="35dp"
                            android:layout_marginBottom="20sp"
                            android:background="@drawable/button_border"
                            android:fontFamily="@font/bold"
                            android:text="Next"
                            android:onClick="Submit"
                            android:elevation="100dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>



    </RelativeLayout>

</RelativeLayout>